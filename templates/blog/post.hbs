{{#> layouts/main}}
<article class="blog-post">
    <header>
        <h1>{{post.title}}</h1>
        <div class="post-meta">
            <time datetime="{{post.date}}">{{formatDate post.date}}</time>
        </div>
    </header>
    
    <div class="post-content">
        {{{post.html_content}}}
    </div>
    
    <footer>
        <div class="post-navigation">
            <a href="/" class="back-to-blog">‚Üê Back to Latest Posts</a>
        </div>
    </footer>
</article>
{{/layouts/main}}