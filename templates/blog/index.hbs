{{#> layouts/main}}
<section class="blog-index">
    <h1>Blog</h1>
    <div class="post-list">
        {{#if posts.length}}
            {{#each posts}}
                <div class="post-card">
                    <h2><a href="/blog/{{slug}}">{{title}}</a></h2>
                    <div class="post-meta">
                        <time datetime="{{date}}">{{formatDate date}}</time>
                    </div>
                    <p>{{description}}</p>
                    <a href="/blog/{{slug}}" class="read-more">Read more →</a>
                </div>
            {{/each}}
        {{else}}
            <p>No posts found.</p>
        {{/if}}
    </div>
    <div class="archive-link">
        <a href="/blog/archive">View all posts →</a>
    </div>
</section>
{{/layouts/main}}